{% extends "./base.njk" %}

{% block content %}
<article class="post">
    <header class="post-header">
        <h1 class="post-title">{{ title }}</h1>
        <div class="post-meta">
            <time datetime="{{ page.date | dateIso }}">{{ page.date | dateReadable }}</time>
            {% if tags %}
            <div class="post-tags">
                {% for tag in tags %}
                <a href="/tags/{{ tag }}" class="tag">{{ tag }}</a>
                {% endfor %}
            </div>
            {% endif %}
            <div class="reading-time">{{ content | readingTime }} min read</div>
        </div>
    </header>

    {% if toc %}
    <div class="toc">
        <h2 class="toc-title">Table of Contents</h2>
        {{ content | toc | safe }}
    </div>
    {% endif %}

    <div class="post-content">
        {{ content | safe }}
    </div>

    {% if categories %}
    <footer class="post-footer">
        <div class="post-categories">
            <strong>Categories:</strong>
            {% for category in categories %}
            <span class="category">{{ category }}</span>
            {% endfor %}
        </div>
    </footer>
    {% endif %}

    {% if tags %}
    <footer class="post-footer">
        <h2>Related Posts</h2>
        <div class="related-posts">
            {% set relatedPosts = collections.posts | filterByTag(tags[0]) | reverse %}
            {% for post in relatedPosts | slice(3) %}
                {% if post.url != page.url %}
                <div class="related-post">
                    <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
                    <div class="post-meta">
                        <time datetime="{{ post.date | dateIso }}">{{ post.date | dateReadable }}</time>
                        â€¢ {{ post.templateContent | readingTime }} min read
                    </div>
                </div>
                {% endif %}
            {% endfor %}
        </div>
    </footer>
    {% endif %}

    <footer class="post-footer">
        <div class="post-share">
            <h3>Share this post</h3>
            <div class="share-buttons">
                <a href="https://twitter.com/intent/tweet?text={{ title | urlencode }}&url={{ page.url | urlencode }}" target="_blank" rel="noopener noreferrer">Twitter</a>
                <a href="https://www.linkedin.com/shareArticle?mini=true&url={{ page.url | urlencode }}&title={{ title | urlencode }}" target="_blank" rel="noopener noreferrer">LinkedIn</a>
            </div>
        </div>
    </footer>
</article>

<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "headline": "{{ title }}",
    "datePublished": "{{ page.date | dateIso }}",
    "dateModified": "{{ page.date | dateIso }}",
    "author": {
        "@type": "Person",
        "name": "{{ site.author.name }}"
    },
    "description": "{{ description }}",
    "url": "{{ page.url | absoluteUrl }}",
    "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "{{ page.url | absoluteUrl }}"
    }
}
</script>

<style>
    .post {
        max-width: var(--content-width);
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .post-header {
        margin-bottom: 2rem;
    }

    .post-header h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color: var(--text-color);
    }

    .post-meta {
        color: var(--text-muted);
        font-size: 0.9rem;
        margin: 1rem 0;
    }

    .post-content {
        margin: 2rem 0;
        line-height: 1.8;
    }

    .post-content h2 {
        font-size: 1.8rem;
        margin: 2rem 0 1rem;
        color: var(--text-color);
    }

    .post-content h3 {
        font-size: 1.4rem;
        margin: 1.5rem 0 1rem;
        color: var(--text-color);
    }

    .post-content p {
        margin: 1rem 0;
    }

    .post-content code {
        background-color: var(--code-bg);
        padding: 0.2rem 0.4rem;
        border-radius: 4px;
        font-family: 'Courier New', Courier, monospace;
    }

    .post-content pre {
        background-color: var(--code-bg);
        padding: 1rem;
        border-radius: 4px;
        overflow-x: auto;
        margin: 1rem 0;
    }

    .post-content pre code {
        background-color: transparent;
        padding: 0;
    }

    .post-content ul, .post-content ol {
        margin: 1rem 0;
        padding-left: 2rem;
    }

    .post-content li {
        margin: 0.5rem 0;
    }

    .post-content blockquote {
        border-left: 4px solid var(--primary-color);
        margin: 1rem 0;
        padding: 0.5rem 1rem;
        background-color: var(--header-bg);
    }

    .post-content img {
        max-width: 100%;
        height: auto;
        border-radius: 4px;
        margin: 1rem 0;
        display: block;
        aspect-ratio: auto;
        object-fit: cover;
    }

    /* Responsive image containers */
    .post-content .image-container {
        position: relative;
        width: 100%;
        margin: 1rem 0;
        overflow: hidden;
        border-radius: 4px;
    }

    .post-content .image-container img {
        width: 100%;
        height: auto;
        margin: 0;
    }

    /* Mobile-specific adjustments */
    @media (max-width: 768px) {
        .post {
            padding: 1rem;
        }

        .post-header h1 {
            font-size: 2rem;
        }

        .related-posts {
            grid-template-columns: 1fr;
        }

        .post-content img {
            margin: 0.75rem 0;
        }

        .post-content .image-container {
            margin: 0.75rem 0;
        }

        /* Ensure images don't overflow on mobile */
        .post-content {
            overflow-x: hidden;
            padding: 0 0.5rem;
        }
    }

    .post-content a {
        color: var(--link-color);
        text-decoration: none;
    }

    .post-content a:hover {
        text-decoration: underline;
    }

    .related-posts {
        margin-top: 2rem;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1rem;
    }

    .related-post {
        padding: 1.5rem;
        background-color: var(--header-bg);
        border-radius: 8px;
        box-shadow: var(--card-shadow);
    }

    .related-post h3 {
        margin: 0;
        font-size: 1.2rem;
    }

    .related-post h3 a {
        color: var(--text-color);
        text-decoration: none;
    }

    .related-post h3 a:hover {
        color: var(--link-color);
    }

    .related-post .post-meta {
        margin: 0.5rem 0 0 0;
        font-size: 0.9rem;
    }

    .tags {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
        margin: 1rem 0;
    }

    .tag {
        background-color: var(--header-bg);
        padding: 0.25rem 0.75rem;
        border-radius: 15px;
        font-size: 0.9rem;
        text-decoration: none;
        color: var(--text-color);
        transition: background-color 0.2s;
    }

    .tag:hover {
        background-color: var(--primary-color);
        color: white;
    }

    .toc {
        background-color: var(--header-bg);
        padding: 1.5rem;
        border-radius: 8px;
        margin: 2rem 0;
        box-shadow: var(--card-shadow);
    }

    .toc-title {
        margin-top: 0;
        margin-bottom: 1rem;
        font-size: 1.2rem;
        color: var(--text-color);
    }

    .toc ul {
        list-style-type: none;
        padding-left: 1rem;
    }

    .toc a {
        color: var(--link-color);
        text-decoration: none;
        display: block;
        padding: 0.25rem 0;
    }

    .toc a:hover {
        text-decoration: underline;
    }
</style>
{% endblock %} 