{% extends "base.njk" %}

{% block content %}
<article class="post">
    <header class="post-header">
        <h1>{{ title }}</h1>
        <div class="post-meta">
            <time datetime="{{ date | dateIso }}">{{ date | dateReadable }}</time>
            {% if tags %}
            <div class="tags">
                {% for tag in tags %}
                {% if tag != "post" %}
                <span class="tag">{{ tag }}</span>
                {% endif %}
                {% endfor %}
            </div>
            {% endif %}
            {% if categories %}
            <div class="categories">
                {% for category in categories %}
                <span class="category">{{ category }}</span>
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </header>

    <div class="post-content">
        {{ content | safe }}
    </div>

    <footer class="post-footer">
        <div class="post-navigation">
            {% if collections.post | getPreviousCollectionItem %}
            <a href="{{ collections.post | getPreviousCollectionItem | getUrl }}" class="prev-post">
                ← {{ collections.post | getPreviousCollectionItem | getDataValue("title") }}
            </a>
            {% endif %}
            {% if collections.post | getNextCollectionItem %}
            <a href="{{ collections.post | getNextCollectionItem | getUrl }}" class="next-post">
                {{ collections.post | getNextCollectionItem | getDataValue("title") }} →
            </a>
            {% endif %}
        </div>
    </footer>
</article>

<style>
    .post {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .post-header {
        margin-bottom: 2rem;
        text-align: center;
    }

    .post-header h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color: var(--text-color);
    }

    .post-meta {
        font-size: 0.9rem;
        color: var(--text-muted);
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        justify-content: center;
        align-items: center;
    }

    .tags, .categories {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .tag, .category {
        background: var(--secondary-background);
        padding: 0.25rem 0.75rem;
        border-radius: 1rem;
        font-size: 0.8rem;
    }

    .post-content {
        font-size: 1.1rem;
        line-height: 1.7;
    }

    .post-content h2 {
        margin: 2rem 0 1rem;
        font-size: 1.8rem;
    }

    .post-content h3 {
        margin: 1.5rem 0 1rem;
        font-size: 1.5rem;
    }

    .post-content p {
        margin-bottom: 1.5rem;
    }

    .post-content code {
        background: var(--secondary-background);
        padding: 0.2rem 0.4rem;
        border-radius: 0.25rem;
        font-size: 0.9em;
    }

    .post-content pre {
        background: var(--secondary-background);
        padding: 1rem;
        border-radius: 0.5rem;
        overflow-x: auto;
        margin: 1.5rem 0;
    }

    .post-footer {
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 1px solid var(--border-color);
    }

    .post-navigation {
        display: flex;
        justify-content: space-between;
        gap: 1rem;
    }

    .prev-post, .next-post {
        color: var(--text-color);
        text-decoration: none;
        max-width: 45%;
    }

    .prev-post:hover, .next-post:hover {
        color: var(--primary-color);
    }

    @media (max-width: 768px) {
        .post-header h1 {
            font-size: 2rem;
        }

        .post-navigation {
            flex-direction: column;
        }

        .prev-post, .next-post {
            max-width: 100%;
        }
    }
</style>
{% endblock %} 